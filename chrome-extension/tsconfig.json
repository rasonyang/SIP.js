{
  "extends": "../tsconfig-base.json",
  "compilerOptions": {
    "module": "ES2020",
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "resolveJsonModule": true,
    "paths": {
      "@sip": ["../src"],
      "@sip/*": ["../src/*"]
    }
  },
  "include": [
    "src/**/*",
    "../src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
